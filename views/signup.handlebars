<div class="row justify-center">
  <div class="col">
    <div class="card p-4 my-4 mx-5">
        <h2 class="page-title">Already Have an Account?</h2>
      <div class="card-body">
        <a href='/login'class="btn btn-primary login-redirect-btn">Click Here to Log In</a>
      </div>
    </div>
  </div>
  <div class="col">
    <div class="card signup-card p-4 my-4 mx-5">
      <h2 class="page-title">Signup</h2>
      <form class="form signup-form">
        <div class="form-group">
          <label for="firstName-signup">First Name:</label>
          <input class="form-input" type="text" id="firstName-signup" />
        </div>
        <div class="form-group">
          <label for="lastName-signup">Last Name:</label>
          <input class="form-input" type="text" id="lastName-signup" />
        </div>
        <div class="form-group">
          <label for="email-signup">Email:</label>
          <input class="form-input" type="email" id="email-signup" />
        </div>
        <div class="form-group">
          <label for="password-signup">Password:</label>
          <input class="form-input" type="password" id="password-signup" />
          <small id="passwordHelpBlock" class="form-text text-muted">
              Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
          </small>
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">Sign Up as a Teacher</button>
        </div>
      </form>
    </div>
  </div>

</div>




<script src="./js/signup.js"></script>