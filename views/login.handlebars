<div class="row justify-center">
  <div class="col">
    <div class="card login-card p-4 my-4 mx-5">
      <h2 class="page-title">Log In to Your Account</h2>
      <form class="form login-form">
        <div class="form-group">
          <label for="email-login">Email:</label>
          <input class="form-input" type="text" id="email-login" />
        </div>
        <div class="form-group">
          <label for="password-login">Password:</label>
          <input class="form-input" type="password" id="password-login" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">Log In</button>
        </div>
      </form>
    </div>
  </div>

  <div class="col">
    <div class="card p-4 my-4 mx-5">
      <h2 class="page-title">Need to Make an Account?</h2>
      <div class="card-body">
        <a href='/signup'class="btn btn-primary login-redirect-btn">Click Here to Sign Up</a>
      </div>
    </div>
  </div>

</div>



<script src="./js/login.js"></script>
